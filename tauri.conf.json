{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Entavi",
  "version": "0.1.0",
  "identifier": "com.entavi.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "dist"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJBRjkzQjhBQTFDNTVERjkKUldUNVhjV2hpanY1dXNZVVFUUHB2OTVRbXIyS3dKUTNxQVlSUUJlcGozNUxrcVNjL29qV3NjSDkK",
      "endpoints": [
        "https://github.com/avdoseferovic/entavi/releases/latest/download/latest.json"
      ]
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "title": "Entavi",
        "width": 400,
        "height": 680,
        "center": true,
        "visible": false,
        "decorations": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "entitlements": "Entitlements.plist"
    },
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
